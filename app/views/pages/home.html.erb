<h1>Welcome to Top News</h1>
<table>
    <thead>    
        <th>Title</th>
        <th>Author</th>
        <th>Published</th>
        <th> </th>
        <th> </th>
    </thead>
    <tbody>
        <% @stories.each do |story| %>
            <tr>
                <td><%= link_to story.title, story.url %></td>
                <td><%= story.author %></td>
                <td><%= story.time %></td>
                <td><%= story.users.count %> have starred this story</td>
                <td><%= link_to 'Star this Story', star_article_path(story_id: story.id, user_id: current_user.id), method: :post %></td>
            </tr>
        <% end %>
    </tbody>
</table>
