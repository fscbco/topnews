<h1>Welcome to Top News</h1>
<ol>
<%- @stories.each do |s| %>
  <li>
    <p>
      <%= link_to s.title, s.url %>
      <br/>
      <%= s.score %>
      points by
      <%= s.by %>
      |
      <%= time_ago_in_words(s.time) %>
      ago
      |
      <%= link_to "Like", like_story_path(s), method: :post %>
      <%- if s.users.size > 0 %>
        | Liked by
        <%= s.users.map(&:full_name).join(", ") %>
      <% end %>
    </p>
  </li>
<%- end %>
</ol>
